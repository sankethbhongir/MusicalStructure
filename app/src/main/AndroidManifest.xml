<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sanketh.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AlbumsActivity"
            android:label="Albums"
            android:theme="@style/AlbumsTheme"
            android:parentActivityName=".Activities.MainActivity"/>
        <activity
            android:name=".Activities.ArtistsActivity"
            android:label="Artists"
            android:theme="@style/ArtistsTheme"
            android:parentActivityName=".Activities.MainActivity"/>
        <activity
            android:name=".Activities.SongsActivity"
            android:label="Songs"
            android:theme="@style/SongsTheme"
            android:parentActivityName=".Activities.MainActivity"/>
        <activity
            android:name=".Activities.GenresActivity"
            android:label="Genres"
            android:theme="@style/GenresTheme"
            android:parentActivityName=".Activities.MainActivity"/>
        <activity android:name=".Activities.DetailsActivity"
            android:parentActivityName=".Activities.AlbumsActivity"/>
    </application>

</manifest>