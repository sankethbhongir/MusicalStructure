<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>
<style name="categoryButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textSize">@dimen/button_size</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">@dimen/category_padding</item>
</style>

    <style name="categoryCardStyle" parent="Theme.MaterialComponents">
        <item name="android:focusable">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/category_card_width</item>
        <item name="android:layout_margin">@dimen/category_card_spacing</item>
    </style>

    <style name="AlbumsTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/AlbumColorPrimary</item>
        <item name="colorPrimaryDark">@color/AlbumPrimaryColorDark</item>
    </style>

    <style name="SongsTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/SongsColorPrimary</item>
        <item name="colorPrimaryDark">@color/SongsPrimaryDark</item>
    </style>

    <style name="ArtistsTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/ArtistColorPrimary</item>
        <item name="colorPrimaryDark">@color/ArtistPrimaryColorDark</item>
    </style>

    <style name="GenresTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/GenreColorPrimary</item>
        <item name="colorPrimaryDark">@color/GenrePrimaryColorDark</item>
    </style>
</resources>
